{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "typeRoots": [
      "./src/types"
    ],
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
